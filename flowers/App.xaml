<Application x:Class="flowers.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:flowers"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="Pink" TargetType="Button">
            <Setter Property="Background" Value="#F6B2B2"/>
            <Setter Property="BorderBrush" Value="#F6B2B2"/>
        </Style>
        <Style x:Key="txt" TargetType="Label">
            <Setter Property="FontFamily" Value="Segoe UI Black"/>
            <Setter Property="FontSize" Value="23"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="NullImage" TargetType="Image">
            <Setter Property="Source" Value="https://i.pinimg.com/564x/5f/18/26/5f1826ce3a4924b9a86e1d9ce3f4e869.jpg"></Setter>
        </Style>
    </Application.Resources>
</Application>
